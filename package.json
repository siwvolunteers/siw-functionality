{
	"name": "siw-functionality",
	"version": "3.0.0",
	"license": "GPL-2.0-or-later",
	"description": "Extra functionaliteit voor website SIW",
	"repository": "https://github.com/siwvolunteers/siw-functionality",
	"scripts": {
		"update": "npm update && vendor-copy",
		"build": "npm run build:icons && npm run build:css",
		"build:icons": "svg2sprite assets/icons assets/siw-icons.svg -i --stripExtraAttrs ---iconPrefix siw-icon-",
		"build:css": "npm run scss && npm run autoprefixer",
		"postinstall": "vendor-copy",
		"scss": "sass --update --no-source-map assets/scss:assets/css",
		"autoprefixer": "postcss --no-map -u autoprefixer -r assets/css/*.css"
	},
	"browserslist": [
		">1%",
		"last 2 versions",
		"IE 10"
	],
	"dependencies": {
		"@accede-web/accordion": "*",
		"@accede-web/tablist": "*",
		"apexcharts": "^3.15.6",
		"balloon-css": "*",
		"flickity": "^2.2.1",
		"js-cookie": "^2.2.1",
		"micromodal": "*",
		"sal.js": "^0.7.3",
		"smoothscroll-for-websites": "^1.4.10"
	},
	"devDependencies": {
		"vendor-copy": "2.*",
		"postcss-cli": "*",
		"sass": "*",
		"svg2sprite-cli": "*",
		"autoprefixer": "*"
	},
	"vendorCopy": [
		{
			"from": "node_modules/balloon-css/balloon.css",
			"to": "assets/modules/balloon/balloon.css"
		},
		{
			"from": "node_modules/apexcharts/dist/apexcharts.js",
			"to": "assets/modules/apexcharts/apexcharts.js"
		},
		{
			"from": "node_modules/smoothscroll-for-websites/SmoothScroll.js",
			"to": "assets/modules/smoothscroll/smoothscroll.js"
		},
		{
			"from": "node_modules/js-cookie/src/js.cookie.js",
			"to": "assets/modules/js-cookie/js.cookie.js"
		},
		{
			"from": "node_modules/flickity/dist/flickity.pkgd.js",
			"to": "assets/modules/flickity/flickity.js"
		},
		{
			"from": "node_modules/flickity/dist/flickity.css",
			"to": "assets/modules/flickity/flickity.css"
		},
		{
			"from": "node_modules/@accede-web/accordion/dist/accordion.js",
			"to": "assets/modules/accordion/accordion.js"
		},
		{
			"from": "node_modules/@accede-web/tablist/dist/tablist.js",
			"to": "assets/modules/tablist/tablist.js"
		},
		{
			"from": "node_modules/micromodal/dist/micromodal.js",
			"to": "assets/modules/micromodal/micromodal.js"
		},
		{
			"from": "node_modules/sal.js/dist/sal.js",
			"to": "assets/modules/sal/sal.js"
		},
		{
			"from": "node_modules/sal.js/dist/sal.css",
			"to": "assets/modules/sal/sal.css"
		}
	]
}
