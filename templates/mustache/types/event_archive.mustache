<div class="grid-20">
	<span class="event-date">
		<span class="day">
            {{&event_day}}
        </span>
		<br>
		<span class="month">
            {{&event_month}}
        </span>
		<br>
		<span class="time">
            {{&icon_clock}} {{&start_time}} - {{&end_time}}
        </span>
    </span>
</div>
<div class="grid-60">
	<span class="event-location">
        {{#online}}
        {{&icon_globe}} {{&name}} {{&location_link}}</h2>
        {{/online}}
        {{^online}}
            {{&icon_map-marker-alt}} {{&location_name}} {{&location_street}} {{&location_postcode}} {{&location_city}}
        {{/online}}
    </span>
<br><br>
{{&excerpt}}}
</div>
<div class="grid-20">
{{&link}}
</div>